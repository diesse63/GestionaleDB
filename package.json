{
  "name": "gestionale-db",
  "version": "2.4.0",
  "description": "Gestionale DB Sicuro per Drive (Win/Mac)",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "pkg . --out-path dist --compress GZip"
  },
  "pkg": {
    "scripts": "server.js",
    "assets": [
      "public/**/*",
      "views/**/*",
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node",
      "node_modules/pdfkit/js/data/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ]
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.17.2",
    "xlsx": "^0.18.5"
  }
}